<h2>Sign Up Confirmation</h2>
<div class="row">
  <div class="col-md-8">
    <h4>Are you sure these values are correct?</h4>
    <p><strong>Email:</strong>
      <%= @user.email %>
    </p>
    <p><strong>Name:</strong>
      <%= @user.name %>
    </p>
    <%= button_to "Yes", {controller: "users", action: "create", params: {name: @user.name, email: @user.email, password: @user.password, password_confirmation: @user.password_confirmation}}, class: 'btn btn-success' %>
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn', method: :get %>
  </div>
</div>
